{% extends 'base.html.twig' %}

{% block body %}
    <div id="cancel-sortie-page">

        <h2>Annuler une sortie</h2>

        <form id="cancel-form" action="{{ path('sortie_annuler', {'idSortie': sortie.idSortie}) }}" method="post">
            <div id="cancel-block-infos-form">
                <div>
                    <p>Nom de la sortie :</p>
                    <p>Date de la sortie :</p>
                    <p>Campus :</p>
                    <p>Lieu :</p>
                    <label for="motif">Motif :</label>
                </div>
                <div>
                    <p>{{ sortie.nom }}</p>
                    <p>{{ sortie.dateHeureDebut.format('d/m/Y') }}</p>
                    <p>{{ sortie.campus }}</p>
                    <p>{{ sortie.lieu.nom }} {{ sortie.lieu.rue }} {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom }}</p>
                    <textarea name="motif" id="motif" rows="6" cols="30"></textarea>
                </div>
            </div>

            <div id="cancel-block-buttons">
                <button type="submit" name="enregistrer">Enregistrer</button>
                <button><a href="{{ path('main_home') }}" title="Retour vers l'acceuil">Annuler</a></button>
            </div>
        </form>

    </div>
{% endblock %}

{% block title %}
    {{ parent() }} | Annuler sortie
{% endblock %}

